<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenfei.exview">

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name=".internal.ExViewActivity"
            android:enabled="true"
            android:icon="@drawable/exview_icon"
            android:label="@string/exview_display_activity_label"
            android:taskAffinity="com.chenfei.exview.${applicationId}"
            android:theme="@style/ExView.Base">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
